<!-- 生活習慣情報 -->
<!-- LifestyleModule XSD Version 1.0 -->
<!-- *************************************************** -->
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified" targetNamespace="http://www.medxml.net/MML/ContentModule/Lifestyle/1.0" 
  xmlns:mmlLs="http://www.medxml.net/MML/ContentModule/Lifestyle/1.0"
  xmlns:xhtml="http://www.w3.org/1999/xhtml"
  >
  <xs:element name="LifestyleModule">
    <xs:complexType>
      <xs:sequence>
        <xs:element ref="mmlLs:occupation"/>
        <xs:element ref="mmlLs:tobacco"/>
        <xs:element ref="mmlLs:alcohol"/>
        <xs:element minOccurs="0" ref="mmlLs:other"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
  
  <xs:element name="occupation" type="xs:string"/>
  <xs:element name="tobacco" type="xs:string"/>
  <xs:element name="alcohol" type="xs:string"/>
  <xs:element name="other" type="xs:string"/>
</xs:schema>
